# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ml]
indent_style = space
indent_size = 2

[*.mli]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
